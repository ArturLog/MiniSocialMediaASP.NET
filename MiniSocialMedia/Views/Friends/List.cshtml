@{
    ViewData["Title"] = "Friends list";
}

@model List<User>

<div class="text-center">
    <h1 class="display-4">Users list</h1>
    <br/>
    <table class="listTable">
        <thead>
        <tr>
            <th>Uuid</th>
            <th>Login</th>
            <th>CreatedAt</th>
            <th>Delete</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Uuid</td>
                <td>@user.Login</td>
                <td>@user.CreatedAt</td>
                <td>
                    <form asp-action="DelPost" asp-controller="User" method="post">
                        <input type="hidden" name="login" value="@user.Login" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>